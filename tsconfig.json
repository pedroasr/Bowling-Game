{
    "include": ["./src/**/*.ts", "./tests/**/*.ts"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2015",
        "noImplicitAny": true,
        "declaration": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "dist",
        "watch": false,
        "lib": ["es2020"],
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@src/*": ["src/*"],
        }
    }
}
